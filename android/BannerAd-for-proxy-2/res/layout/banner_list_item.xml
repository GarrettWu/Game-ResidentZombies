<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="300dip" android:layout_height="162dip"
	android:id="@+id/layout" android:layout_gravity="center_horizontal">
	<ImageView android:id="@+id/game_icon" android:layout_width="63dip"
		android:layout_height="63dip" android:layout_marginTop="24dip"
		android:layout_marginLeft="19dip" android:layout_alignParentLeft="true" />


	<TextView android:id="@+id/game_name" android:layout_width="wrap_content"
		android:layout_height="wrap_content" android:layout_marginTop="28dip"
		android:layout_marginLeft="18dip" android:layout_toRightOf="@id/game_icon"
		android:singleLine="true" android:textSize="16sp" android:textStyle="bold"
		android:textColor="#ff082545" />
	<Button android:id="@+id/download" android:layout_width="113dip"
		android:layout_height="35dip" android:layout_alignParentBottom="true"
		android:layout_centerHorizontal="true" android:focusable="false"
		android:layout_marginBottom="10dip" android:textSize="12sp"
		android:textStyle="bold" android:text="@string/banner_download" />
	<TextView android:id="@+id/game_desc" android:layout_width="wrap_content"
		android:layout_height="wrap_content" android:layout_marginTop="1dip"
		android:layout_marginLeft="18dip" android:layout_below="@id/game_name"
		android:layout_above="@id/download" android:layout_toRightOf="@id/game_icon"
		android:singleLine="false" android:textSize="14sp" android:textStyle="bold"
		android:textColor="#ff28588f" />

</RelativeLayout>
